<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDF0F7"
    tools:context=".activities.home.HomeActivity">


    <RelativeLayout
        android:id="@+id/root_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_banner"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:outlineAmbientShadowColor="@color/custom_green_color"
            android:outlineSpotShadowColor="@color/custom_green_color"
            app:cardBackgroundColor="@color/custom_green_color"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/custom_green_color">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_bannertwo"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="15dp"
                    app:cardBackgroundColor="@color/custom_green_color"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bannerfour">

                        <ImageView
                            android:id="@+id/img"
                            android:layout_width="30dp"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/bannerfive"
                            app:tint="@android:color/white" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_banner"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif-black"
            android:text="    Status \nDownloader"
            android:textColor="@color/md_theme_light_primary"
            android:textSize="20sp" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/root_layout">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="40dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_whats_app"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:outlineAmbientShadowColor="@color/custom_color"
                android:outlineSpotShadowColor="@color/custom_color"
                app:cardBackgroundColor="@color/md_theme_light_onSecondary"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/view_one"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/view_one">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_itemOne"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            app:cardBackgroundColor="@color/md_theme_light_onSecondary"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="1dp">

                            <ImageView
                                android:id="@+id/img_whatsapp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerVertical="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/whatsapp_icon" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tv_whatsapp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/card_itemOne"
                            android:fontFamily="sans-serif-black"
                            android:text="Whatsapp"
                            android:textAllCaps="false"
                            android:textColor="@color/md_theme_light_primary"
                            android:textSize="15sp" />
                    </RelativeLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_business"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/card_whats_app"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:outlineAmbientShadowColor="@color/custom_color"
                android:outlineSpotShadowColor="@color/custom_color"
                app:cardBackgroundColor="@color/md_theme_light_onSecondary"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >

                    <View
                        android:id="@+id/view_two"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/view_two">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_item_business"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            app:cardBackgroundColor="@color/md_theme_light_onSecondary"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="1dp">

                            <ImageView
                                android:id="@+id/img_bWhatsapp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerVertical="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/whatsapp_business_icon" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tv_bWhatsapp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/card_item_business"
                            android:fontFamily="sans-serif-black"
                            android:text="Business Whatsapp"
                            android:textAllCaps="false"
                            android:textColor="@color/md_theme_light_primary"
                            android:textSize="15sp" />
                    </RelativeLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_message_send"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/card_business"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:outlineAmbientShadowColor="@color/custom_color"
                android:outlineSpotShadowColor="@color/custom_color"
                app:cardBackgroundColor="@color/md_theme_light_onSecondary"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <View
                        android:id="@+id/view_three"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/view_three">

                        <TextView
                            android:id="@+id/to_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="5dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="To,"
                            android:textColor="#4A9BE8"
                            android:textSize="20sp"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_mobNo"
                            android:textColor="@color/custom_green_color"
                            android:hint="Enter Mob No"
                            android:inputType="phone"
                           android:maxLength="10"
                            android:textColorHint="@android:color/darker_gray"
                            android:textStyle="normal"
                            android:layout_below="@+id/to_no"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_below="@+id/et_mobNo"
                            >
                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/et_message"
                            android:layout_weight="1.5"
                            android:hint="Type your message.."
                            android:textColor="@color/custom_green_color"
                            android:padding="10dp"
                            android:layout_margin="5dp"
                            android:textStyle="normal"
                            android:textColorHint="@android:color/darker_gray"
                            android:gravity="top|left"
                            android:background="@drawable/shape_edittext"
                            />
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:id="@+id/msg_sent"
                                android:src="@drawable/send"
                                />
                        </LinearLayout>
                    </RelativeLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/card_message_send"/>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>